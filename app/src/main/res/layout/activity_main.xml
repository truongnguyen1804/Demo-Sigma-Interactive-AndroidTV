<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerActivity">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/interactive_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/layout_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#33000000"
        android:paddingTop="32dp"
        android:paddingBottom="32dp">

        <Button
            android:id="@+id/btn_guest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:nextFocusLeft="@id/btn_u3"
            android:nextFocusRight="@id/btn_u_1"
            android:text="Guest"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btn_u_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:nextFocusLeft="@id/btn_guest"
            android:nextFocusRight="@id/btn_u_2"
            android:text="User 1"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btn_u_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:nextFocusLeft="@id/btn_u_1"
            android:nextFocusRight="@id/btn_u3"
            android:text="User 2"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btn_u3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:nextFocusLeft="@id/btn_u_2"
            android:nextFocusRight="@id/btn_channel_1"
            android:text="User 3"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btn_channel_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:nextFocusLeft="@id/btn_u3"
            android:nextFocusRight="@id/btn_channel_2"
            android:text="Channel 1"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btn_channel_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:nextFocusLeft="@id/btn_channel_1"
            android:nextFocusRight="@id/btn_channel_3"
            android:text="Channel 2"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btn_channel_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:nextFocusLeft="@id/btn_channel_2"
            android:nextFocusRight="@id/btn_channel_4"
            android:text="Channel 3"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btn_channel_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:nextFocusLeft="@id/btn_channel_3"
            android:nextFocusRight="@id/btn_guest"
            android:text="Channel 4"
            android:textSize="8sp" />


    </LinearLayout>


</RelativeLayout>